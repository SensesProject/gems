        "variables": [
          {"value": "Food Demand|Crops", "name": "Demand for Crops"},
          {"value": "Food Demand|Livestock", "name": "Demand for Livestock"},
          {"value": "Land Cover|Cropland", "name": "Food Crops"},
          {"value": "Land Cover|Pasture", "name": "Pasture"}
